<style>
    .header{
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: 1fr;
        grid-column-gap: 0px;
        grid-row-gap: 0px;
    }

    .title { grid-area: 1 / 2 / 2 / 3; }
    .userName { grid-area: 1 / 3 / 2 / 4; }
    .visits { grid-area: 1 / 4 / 2 / 5; }
</style>


<div class="header">
    <h1 class="title"><%=title%></h1>
    <p class="userName"><%=userName></p>
    <p class="visits"><%=visits></p>
</div>